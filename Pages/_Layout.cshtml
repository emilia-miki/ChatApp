@using Microsoft.AspNetCore.Components.Web
@namespace ChatApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <base href="~/"/>
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css"/>
    <link href="css/site.css" rel="stylesheet"/>
    <link href="ChatApp.styles.css" rel="stylesheet"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered"/>
</head>
<body>
@RenderBody()

<div id="blazor-error-ui">
    <environment include="Staging,Production">
        An error has occurred. This application may no longer respond until reloaded.
    </environment>
    <environment include="Development">
        An unhandled exception has occurred. See browser dev tools for details.
    </environment>
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<script>
let tooFast = false;
let originalScroll, originalScrollHeight;

function scrollToEnd(div) {
    let sh = div.scrollHeight;
    div.scrollTop = sh;
    originalScroll = sh;
    originalScrollHeight = sh;
}

function adjustScroll(div) {
    div.scrollTop = div.scrollHeight - originalScrollHeight;
}

function saveScroll(div) {
    originalScroll = div.scrollTop;
    originalScrollHeight = div.scrollHeight;
}

function loadScroll(div) {
    if (Math.abs(originalScrollHeight - originalScroll) < 15) {
        div.scrollTop = div.scrollHeight;
    } else {
        div.scrollTop = originalScroll;
    }
    originalScrollHeight = div.scrollHeight;
    originalScroll = div.scrollTop;
}

function setScrollCheckCallback(div, obj) {
    div.onscroll = () => {
        if (tooFast) {
            return;
        }
        tooFast = true;
        setTimeout(() => tooFast = false, 100);
        if (div.scrollTop < 15) {
            originalScrollHeight = div.scrollHeight;
            obj.invokeMethodAsync('LoadMore');
        }
    }
}
</script>
<script src="_framework/blazor.server.js"></script>
</body>
</html>